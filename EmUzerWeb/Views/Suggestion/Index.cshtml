@using System.Collections.Generic;
@using EmUzerWeb.Models;

@model SuggestionViewModel
@{
    ViewBag.Title = "Suggestions";
}

<link href="~/Content/suggestions.css" rel="stylesheet" />
<div id="heading">
    <h2>Suggestions</h2>
    <hr />
</div>

<div id="suggestions">
    <div class="panel" id="spotify-suggestions">
        <div data-toggle="collapse" data-target="#spotify-body" class="panel-heading">Spotify</div>
        <div class="panel-body collapse" id="spotify-body">
            <h3>Emotion Results for: @Model.Emotion</h3>
            @foreach (var uri in Model.SpotifyEmotionResults)
            {
                <iframe src="https://embed.spotify.com/?uri=@uri" width="300" height="380" frameborder="0" allowtransparency="true"></iframe>
            }
            <hr />
            <h3>Weather Results for: @Model.Weather</h3>
            @foreach (var uri in Model.SpotifyWeatherResults)
            {
                <iframe src="https://embed.spotify.com/?uri=@uri" width="300" height="380" frameborder="0" allowtransparency="true"></iframe>
            }
        </div>
    </div>
    <div class="panel" id="youtube-suggestions">
        <div data-toggle="collapse" data-target="#youtube-body" class="panel-heading">YouTube</div>
        <div class="panel-body collapse" id="youtube-body">
            <h3>Emotion Results for: @Model.Emotion</h3>
            @foreach (var id in Model.YoutubeEmotionResults)
            {
                <iframe width="420" height="315" src="https://www.youtube.com/embed/@id"></iframe>
            }
            <hr />
            <h3>Weather Results for: @Model.Weather</h3>
            @foreach (var id in Model.YoutubeWeatherResults)
            {
                <iframe width="420" height="315" src="https://www.youtube.com/embed/@id"></iframe>
            }
        </div>
    </div>
</div>